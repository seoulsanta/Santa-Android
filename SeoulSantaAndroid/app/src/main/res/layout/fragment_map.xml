                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/mountain"/>
            <ImageView
                    android:id="@+id/guryong"
                    android:layout_marginTop="202.8dp"
                    android:layout_marginLeft="231.8dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/mountain"/>
