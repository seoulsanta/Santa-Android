                    android:id="@+id/ansan"
                    android:layout_marginTop="92.7dp"
                    android:layout_marginLeft="137.7dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/mountain"/>
            <ImageView
                    android:id="@+id/baengnyeon"
                    android:layout_marginTop="69dp"
                    android:layout_marginLeft="117.9dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/mountain"/>
            <ImageView
                    android:id="@+id/bongge"
                    android:layout_marginTop="135.6dp"
                    android:layout_marginLeft="100.2dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/mountain"/>
