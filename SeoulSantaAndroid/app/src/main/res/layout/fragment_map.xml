                android:layout_marginTop="75dp"
                android:layout_centerHorizontal="true"
                android:layout_width="340dp"
                android:layout_height="240dp"
                android:background="@drawable/map_background">
            <ImageView
                    android:id="@+id/bulam"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="257.1dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/mountain"/>
            <ImageView
                    android:id="@+id/dw_bulam"
                    android:visibility="invisible"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="237.1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dw_bull"/>
            <ImageView
                    android:id="@+id/sulak"
                    android:layout_marginLeft="233.4dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/mountain"/>
            <ImageView
                    android:id="@+id/dw_sulak"
                    android:visibility="invisible"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="207.1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dw_ok"/>
            <ImageView
                    android:id="@+id/dobong"
                    android:layout_marginLeft="201.4dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/mountain"/>
            <ImageView
                    android:id="@+id/bukhan"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="176.1dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/mountain"/>
