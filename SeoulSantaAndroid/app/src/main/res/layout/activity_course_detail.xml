<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.map.detail.CourseDetailActivity"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/img_mt_present"
            android:layout_width="match_parent"
            android:layout_height="341dp"
            android:background="@drawable/mountain_img"/>

    <TextView
            android:layout_marginTop="28dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="북한산"/>
    <TextView
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="어쩌고 저쩌고 최고 등산코스"/>

    <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="31dp"
            android:layout_width="match_parent"
            android:layout_height="70dp">
        <ImageView
                android:id="@+id/img_course"
                android:layout_alignParentLeft="true"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:background="#bcbcbc"/>

        <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_course"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:orientation="vertical"
                 android:weightSum="3">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:text="2코스"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:text="소요시간"/>
                <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:text="약 3시간"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:text="코스난이도"/>
                <TextView
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:text="1시간"/>
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/btn_start_course"
            android:layout_marginTop="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_green">
        <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="코스 시작하기"/>

    </RelativeLayout>


</LinearLayout>